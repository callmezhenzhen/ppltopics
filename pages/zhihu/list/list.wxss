.list-main {
    padding: 20rpx 0 0 0;
}
.list-item {
    padding: 20rpx;
    margin: 0 0 20rpx 0;
    background-color: #fff;
}
.li-title {
    font-size: 32rpx;
    font-weight: bold;
}
.li-author-ex {
    padding: 10rpx 0;
    line-height: 1.5;
    font-size: 28rpx;
    color: #666;
}
.li-vt-cm {
    display: flex;
    margin: 10rpx 0 0 0;
}
.li-vote, .li-comment {
    padding: 10rpx 20rpx;
    background-color: rgba(0,132,255,.1);
    border-radius: 10rpx;
    font-size: 28rpx;
    color: #0084ff;
}
.li-comment {
    margin: 0 0 0 20rpx;
}